---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const list = [
  // { id: "wcag-nav", label: t("ui.base.WcagQuickJump.nav") },
  { id: "wcag-main", label: t("ui.base.WcagQuickJump.main") },
  { id: "wcag-footer", label: t("ui.base.WcagQuickJump.footer") },
];
const className =
  "block w-fit bg-foreground text-background p-2 fixed top-0 left-4 z-10 -translate-y-full focus:translate-y-4 motion-safe:transition-transform";
---

{
  list.map((item) => (
    <a href={`#${item.id}`} class={className}>
      {item.label}
    </a>
  ))
}
